<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment"
    android:background="@drawable/background_about">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/anh_nen_icon"/>
            <TextView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Xuan Long Restaurant"
                android:textSize="28sp"
                android:textStyle="bold|italic"
                android:fontFamily="@font/lobster"
                android:layout_marginTop="0dp"
                android:layout_marginStart="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="Contact: "/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:paddingStart="10dp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="1234556"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="Address: "/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:paddingStart="10dp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="265 Lien Chieu, Da Nang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="Time: "/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:paddingStart="10dp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="7h - 21h Mon - Fri || \n 9h - 21h Sat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="Email: "/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:paddingStart="10dp"
                    android:enabled="false"
                    android:textColor="#020202"
                    android:textStyle="bold"
                    android:text="xuanduy023@gmail.com"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="www.localhost.restaurant_main"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/facebook"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/instapng"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/twister"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>