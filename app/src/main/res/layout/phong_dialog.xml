<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/giaodien4">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="DANH MUC"
        android:gravity="center"
        android:fontFamily="@font/poppinsmedium"

        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/giaodien5"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/giaodien1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:fontFamily="@font/poppinsmedium"

            android:hint="Mã Danh Muc"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/edMaDanhMuc"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppinsmedium"

        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/giaodien1"
            android:padding="10dp"
            android:hint="Tên Danh Muc"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/edTenDanhMuc"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveDanhMuc"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsmedium"

            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/background_button5"
            android:text="Lưu"
            />

        <Button
            android:id="@+id/btnCancelDanhMuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsmedium"

            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/background_button5"
            android:text="Hủy" />
    </LinearLayout>
</LinearLayout>