<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/giaodien4"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/giaodien5"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:text="ĐẶT BÀN"

        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/tvDatBanText"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvDatBanText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/inputDB1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edMaDatBan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/giaodien1"
                    android:fontFamily="@font/poppinsmedium"

                    android:hint="Mã Đặt Bàn"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/inputDB2"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edTenNguoiDatBan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/giaodien1"
                    android:hint="Tên Người Đặt"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:id="@+id/inputDB3"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edEmailNguoiDatBan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/giaodien1"
                    android:hint="Email"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:id="@+id/inputDB4"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSDTNguoiDatBan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/giaodien1"
                    android:hint="SĐT"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:id="@+id/inputDB5"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edNgayDatBan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/giaodien1"
                    android:hint="Ngày Đặt"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:id="@+id/inputDB6"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edGioDatBan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/giaodien1"
                    android:hint="Giờ Đặt"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:id="@+id/inputDB7"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSoNguoiDatBan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/giaodien1"
                    android:hint="Số Người"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:id="@+id/spnDSPhong"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSaveDatBan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_button5"
                    android:fontFamily="@font/poppinsmedium"

                    android:text="Lưu"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCancelDatBan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button5"

                    android:fontFamily="@font/poppinsmedium"
                    android:text="Hủy"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>